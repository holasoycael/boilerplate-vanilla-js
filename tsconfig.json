{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@models/*": ["./src/models/*"],
      "@utils/*": ["./src/utils/*"],
      "@templates/*": ["./src/templates/*"],
      "@modules/*": ["./src/modules/*"],
      "@typings/*": ["./src/typings/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
